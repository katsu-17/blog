<div class="search_form text-right">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
</div>

<div class="container">
  <%= render "article", articles: @articles %>
  <div class="row">
    <% if user_signed_in? %>
      <%= link_to "新規作成", new_article_path, class: "margin-top-5per btn btn-primary margin-bottom-15" %>
    <% end %>
  </div>
</div>
